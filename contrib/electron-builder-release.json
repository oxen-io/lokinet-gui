{
  "appId": "com.electron.lokinet.gui",
  "directories": {
    "output": "release/"
  },
  "asar": true,
  "mac": {
    "identity": null,
    "target": "dmg",
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": ["portable"]
  },
  "portable": {
    "artifactName": "Lokinet-GUI_portable.exe",
    "requestExecutionLevel": "admin"
  },
  "linux": {
    "target": ["deb"]
  },
  "deb": {
    "afterInstall": "build-scripts/deb-postinstall.sh"
  },
  "files": [
    "dist/**/*",
    "dist/*",
    "build-scripts/*",
    "icons/*",
    "fonts/*",
    "images/*",
    "js/main.js"
  ]
}
